= title t('s_hobby',w: @user.name)
- if flash[:notice]
  #notice= flash[:notice]
h2
  | #{link_to t('_setting'), my_site + admin_path} >&nbsp;爱好
.table.b
  - @hobbies.each do |hobby|
    = hobby.name
    = link_to '×', hobby, method: :delete, title: t('delete')
    | &nbsp;&nbsp;&nbsp;
  = form_for @hobby do |f|
    | 爱好:
    = f.text_field :name, size: 12, class: 'required'
    = f.submit t'new'
javascript:
  $('#hobby_name').focus()
= validate_form 'new_hobby'