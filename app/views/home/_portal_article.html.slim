#wrapper
  #content
    .grid-24-0.clearfix
      .article
        h2
          = t'recent_photos'
          | &nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·
          span
            | &nbsp;
            = link_to t('more_photos'), photos_path
          | &nbsp;&nbsp;
          = link_to '论坛', sub_site('bbs')
          | &nbsp;&nbsp;
          = link_to t('become_writer'), as_a_writer_path
          | &nbsp;&nbsp;
          = link_to t('mobile_version'), m(SITE_URL), title: "手机访问本站时，将自动定位为手机版，不必特意访问http://m.mystory.cc/"
          span.rr
            = render 'shared/share'
        = render 'photo_square_portal'
    .grid-16-8.clearfix
      .article
        #db-music-artists.block4
          h2
            | 最近诞生的作品
            | &nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·
          .bd
            - @blogs_new.each do |blog|
              .headline
                a.pic href=site(blog.user)
                  = image_tag(blog.user.avatar.thumb.url, width: USER_THUMB_SIZE, height: USER_THUMB_SIZE)
                .desc
                  h3
                    = link_to blog.user.name, site(blog.user)
                    | ：《
                    = link_to blog.title, site(blog.user) + blog_path(blog)
                    | 》
                    span.pl
                      = blog.created_at.strftime t'no_year'
                  = summary_comment_portal(blog, 180)
      .aside
        #db-music-artists.block4
          h2
            | 论坛新贴
            | &nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·#{link_to t('all'), sub_site('bbs')}
          .bd
            - @posts.each do |post|
              - etc = t('all_characters', w: post.content.size) if post.content.size>100
              = link_to post.title[0..35], sub_site('bbs')+"/p/#{post.id}", title: post.content[0..100]+etc.to_s
              | &nbsp;&nbsp;/
              = link_to post.user.name, site(post.user)
              br
          br
          h2
            | 最新日记
            | &nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·&nbsp;·
          .bd
            - @notes_new.each do |note|
              .headline
                a.pic href=site(note.user)
                  = image_tag(note.user.avatar.thumb.url, width: USER_THUMB_SIZE, height: USER_THUMB_SIZE)
                .desc
                  = link_to note.user.name, site(note.user)
                  | ：
                  = summary_comment_portal(note, 140)
                  br
                  span.pl
                    = note.created_at.strftime t'no_year'
  = render 'shared/footer_portal'