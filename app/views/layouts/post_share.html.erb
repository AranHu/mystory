<!DOCTYPE html>
<html class="ua-ff4" lang="zh-CN">
  <head>
    <title><%= yield :title %></title>
    <%= stylesheet_link_tag "style", "form" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'shared/top' %>
    <div id='wrapper'>
      <div id='content'>
        <h1><%= yield :h %></h1>
        <div class='grid-20-4 clearfix'>
          <div class='article'>
            <%= yield %>
          </div>
          <div class='aside'>
            <%= render 'shared/side_post' %>
          </div>
        </div>
      </div>
      <%= render 'shared/footer_help' %>
    </div>
    <script type="text/javascript" >
      var jiathis_config={
        siteNum:6,
        sm:"tsina,tqq,qzone,renren,tsohu,douban",
        url:"<%= request.url %>",
        summary:"<%= yield :summary %>",
        title:"<%= yield :title %>"
      }
    </script>
    <script type="text/javascript" src="http://v2.jiathis.com/code_mini/jia.js" charset="utf-8"></script>
  </body>
</html>