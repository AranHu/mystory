<!DOCTYPE html>
<html class="ua-ff4" lang="zh-CN">
  <head>
    <title><%= yield :title %></title>
    <%= stylesheet_link_tag "style", "form" %>
    <%= yield :stylesheet %>
    <%= javascript_include_tag "user_home" %>
    <%= yield :javascript %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'shared/top' %>
    <div id='wrapper'>
      <div id='content'>
        <div class='grid-24-0 clearfix'>
          <div class='article'>
            <% if @user.id != session[:id] %>
              <div id='db-usr-profile'>
                <%= render 'shared/head_user' %>
              </div>
              <div class="clear"></div>
              <br/>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
      <%= render 'shared/footer_like' %>
    </div>
  </body>
</html>