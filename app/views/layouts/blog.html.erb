<!DOCTYPE html>
<html class="ua-ff4" lang="zh-CN">
  <head>
    <title><%= yield :title %></title>
    <meta name="description" content="<%= yield :metadesc %>" />
    <%= stylesheet_link_tag "user" %>
    <% if session[:id].nil? %>
      <%= javascript_include_tag "user_blog_no_session" %>
    <% else %>
      <%= javascript_include_tag "user_blog" %>
    <% end %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'shared/top' %>
    <div id='wrapper'>
      <div id='content'>
        <div class='grid-19-5 clearfix'>
          <div class='article'>
            <div id='db-usr-profile'>
              <%= render 'shared/head_user' %>
            </div>
            <div class="clear"></div>
            <br/>
            <%= yield %>
          </div>
          <div class='aside'>
            <%= render 'shared/side_blog' %>
          </div>
        </div>
      </div>
      <%= render 'shared/footer' %>
    </div>
    <%= render 'shared/share_js' %>
    <%#= render 'shared/ad/blog_float' %>
    <%#= render 'shared/ad/blog_window' %>
  </body>
</html>