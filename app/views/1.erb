%br
.span-7.last
  %h3 分类目录
  -@categories.each do |category|
    -if category.id==@category.id
      =link_to category.name,categories_path,:class => "selected"
    -else
      =link_to category.name,categories_path
    %br

-@news.each do |news|
    =link_to news.category.name,news.category
    =link_to news.title, news
    &nbsp;
    =(news.created_at+8.hour).strftime '%Y.%m.%d'
    %br