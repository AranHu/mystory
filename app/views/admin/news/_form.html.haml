=javascript_include_tag "javascripts/ckeditor/ckeditor.js"
=form_for [:admin, @news] do |f|
  =error_msg @news
  .field
    =f.label :标题
    %br
    =f.text_field :title
  .field
    =f.label :内容
    %br
    =f.text_area :content
    =ckeditor_js "news_content"
  .field
    =f.label :分类
    =collection_select :news, :category_id, Category.all, :id, :name
  .field
    =f.label :发布日期
    %br
    =date_select :news, :created_at
  .actions
    =f.submit