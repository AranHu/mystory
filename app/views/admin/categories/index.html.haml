=form_for [:admin, @category] do |f|
  =f.label t('category_addtip')
  =f.text_field :name,:size => 20
  =f.submit t(:submit)
%table
  %tr
    %th=t('category.name')
    %th
    %th
    %th{colspan:2}=t('sort')
  -@categories.each_with_index do |category,i|
    %tr
      %td=category.name
      %td=link_to t(:edit), edit_admin_category_path(category)
      %td=link_to t(:delete), admin_category_path(category), confirm:t('confirm.delete'), method: :delete
      %td
        -if i>0
          =link_to t(:up), up_admin_category_path(category)
        -else
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        -if i<@categories.length-1
          =link_to t(:down), down_admin_category_path(category)